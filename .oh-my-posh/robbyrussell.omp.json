{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "foreground": "#98C379",
            "style": "plain",
            "template": "\u279c",
            "type": "text"
          },
          {
            "foreground": "#56B6C2",
            "properties": {
              "style": "folder"
            },
            "style": "plain",
            "template": " {{ .Path }} ",
            "type": "path"
          },
          {
            "foreground": "#D0666F",
            "properties": {
              "branch_icon": ""
            },
            "style": "plain",
            "template": "{{ if not (and (eq .OS \"windows\") (eq .Shell \"pwsh\") .IsWorkTree) }}<#5FAAE8>git:(</>{{ .HEAD }}<#5FAAE8>)</>{{ end }}",
            "type": "git"
          },
          {
            "foreground": "#BF616A",
            "style": "plain",
            "template": " \u2717",
            "type": "status"
          },
          {
            "foreground": "#906cff",
            "style": "plain",
            "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }}",
            "type": "python",
            "properties": {
              "folder_name_fallback": false
            }
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 3
}
