{
    "csv-preview.lineNumbers": "ordinal",
    "csv-preview.resizeColumns": "all",
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "git.blame.editorDecoration.enabled": true,
    "markdownlint.lintWorkspaceGlobs": ["!**/LICENSE"],
    "notebook.output.scrolling": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportMissingModuleSource": "none",
        "reportInvalidTypeForm": "none"
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.experiments.optOutFrom": ["pythonTerminalEnvVarActivation"],
    "python-envs.pythonProjects": [],
    "rainbow_csv.rbql_with_headers_by_default": true,
    "rainbow_csv.virtual_alignment_mode": "always",
    "rainbow_csv.virtual_alignment_char": "space",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["--init-file", "${workspaceFolder}/.bashrc"]
        }
    },
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "a-file-icon-vscode",
    "workbench.sideBar.location": "right"
}
